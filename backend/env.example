# MongoDB Connection
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/jobmatch
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobmatch

# JWT Secret Key (change this to a random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Service URL (Python FastAPI service)
AI_SERVICE_URL=http://127.0.0.1:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Server Port (optional, defaults to 5000)
PORT=5000

# Node Environment
NODE_ENV=development

